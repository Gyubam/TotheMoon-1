<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyItemMoreInfoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ViewFlipper
                android:id="@+id/vlf_itemMoreInfo_imglist"
                android:layout_width="228dp"
                android:layout_height="207dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_itemMoreInfo_name">


                <ImageView
                    android:id="@+id/img_itemMoreInfo_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/img_itemMoreInfo_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/img_itemMoreInfo_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/img_itemMoreInfo_img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/img_itemMoreInfo_img5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </ViewFlipper>

            <TextView
                android:id="@+id/tv_itemMoreInfo_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="카테고리"
                android:textColor="#808080"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_itemMoreInfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="물품 이름"
                android:textSize="27dp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/tv_itemMoreInfo_category"
                app:layout_constraintStart_toStartOf="@+id/tv_itemMoreInfo_category"
                app:layout_constraintTop_toBottomOf="@+id/tv_itemMoreInfo_category" />

            <TextView
                android:id="@+id/tv_itemMoreInfo_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:text="설명"
                android:textColor="#6a6a6a"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vlf_itemMoreInfo_imglist" />

            <TextView
                android:id="@+id/tv_itemMoreInfo_areaIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="동네"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_itemMoreInfo_description"
                app:layout_constraintTop_toBottomOf="@+id/tv_itemMoreInfo_description" />

            <TextView
                android:id="@+id/tv_itemMoreInfo_areaValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="동네"
                android:textColor="#6a6a6a"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_itemMoreInfo_areaIndex"
                app:layout_constraintTop_toBottomOf="@+id/tv_itemMoreInfo_areaIndex" />

            <TextView
                android:id="@+id/tv_itemMoreInfo_dateIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="등록일자"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_itemMoreInfo_areaValue"
                app:layout_constraintTop_toBottomOf="@+id/tv_itemMoreInfo_areaValue" />

            <TextView
                android:id="@+id/tv_itemMoreInfo_dateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="등록일자 db에 등록되지 않아서 아직 구현 x"
                android:textColor="#6a6a6a"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tv_itemMoreInfo_dateIndex"
                app:layout_constraintTop_toBottomOf="@+id/tv_itemMoreInfo_dateIndex" />

            <ImageButton
                android:id="@+id/btn_itemMoreInfo_right"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/vlf_itemMoreInfo_imglist"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/right_icon" />

            <ImageButton
                android:id="@+id/btn_itemMoreInfo_left"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="180dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/vlf_itemMoreInfo_imglist"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/left_icon" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>