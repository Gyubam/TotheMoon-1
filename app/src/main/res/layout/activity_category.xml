<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoryActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="관심 카테고리 설정"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:text="선택한 카테고리의 게시글만 홈에 보이게 됩니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최대 3개까지 선택가능"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/Digital"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="디지털기기"
            android:background="#86C8E6"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/Funiture"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="가구/인테리어"
            android:layout_marginLeft="20dp"
            android:background="#86C8E6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/Food"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="식품"
            android:background="#86C8E6"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/Sports"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="스포츠/레저"
            android:layout_marginLeft="20dp"
            android:background="#86C8E6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/ManClothes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="남성잡화"
            android:background="#86C8E6"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/WomanClothes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="여성잡화"
            android:layout_marginLeft="20dp"
            android:background="#86C8E6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/Games"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="게임/취미"
            android:background="#86C8E6"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/Beauty"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="미용"
            android:layout_marginLeft="20dp"
            android:background="#86C8E6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/Animals"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="반료동물물품"
            android:background="#86C8E6"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/Books"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="도서/티켓/음반"
            android:layout_marginLeft="20dp"
            android:background="#86C8E6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/Baby"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="유아용품"
            android:background="#86C8E6"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/Etc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="기타"
            android:layout_marginLeft="20dp"
            android:background="#86C8E6"/>
    </LinearLayout>
</LinearLayout>